" Powerline stuff to make it look cool
let g:airline_powerline_fonts = 1
let g:airline#extensions#tabline#enabled = 1
let g:Powerline_symbols = 'fancy'

" Use my mapleader, not Janus's \ (Did you catch that?)
let mapleader = ","

" Redraw better
set lazyredraw

" Mouse selects buffer
imap <RightMouse> <Esc>
nmap <RightMouse> <Esc>
set mouse=a
